{
    "name": "techenby/laravel-dashboard-github-tile",
    "description": "A tile for laravel dashboard for showing GitHub Issues and Pull Requests.",
    "keywords": [
        "techenby",
        "laravel-dashboard-github-tile"
    ],
    "homepage": "https://github.com/techenby/laravel-dashboard-github-tile",
    "license": "MIT",
    "authors": [
        {
            "name": "Andy Newhouse",
            "email": "hi@andymnewhouse.me",
            "homepage": "https://andymnewhouse.me",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.0|^7.4",
        "spatie/laravel-dashboard": "^2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.3",
        "tightenco/duster": "^0.3.2"
    },
    "autoload": {
        "psr-4": {
            "Techenby\\GithubTile\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Techenby\\GithubTile\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Techenby\\GithubTile\\GithubTileServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
